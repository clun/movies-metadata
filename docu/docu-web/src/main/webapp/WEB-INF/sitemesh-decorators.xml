<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<decorators defaultdir="/jsp-layout" >

    <excludes>
        <pattern>/img/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/fonts/*</pattern>
        <pattern>/api/*</pattern>
    </excludes> 
    
      <!-- Documentaires -->
    <decorator name="docugenre" page="layout-docugenre.jsp">
        <pattern>/documentaireByGenre.htm</pattern>
        <pattern>/documentaireDisplay.htm*</pattern>
    </decorator>
   
    <!--Login -->
     <decorator name="login" page="layout-login.jsp">
        <pattern>/login.htm</pattern>
     </decorator>
     
    <!-- Home -->
    <decorator name="default" page="layout-default.jsp">
        <pattern>/*</pattern>
        <pattern>/40*.jsp</pattern>
        <pattern>/error.jsp</pattern>                
    </decorator>
    
  
    
</decorators>
